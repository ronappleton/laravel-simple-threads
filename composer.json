{
    "name": "ronappleton/laravel-simple-threads",
    "description": "Super simple conversation threads for Laravel.",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Appleton\\Threads\\": "src/",
            "Tests\\": "tests/",
            "Database\\Factories\\": "database/factories/"
        },
        "files": [
            "helpers.php"
        ]
    },
    "authors": [
        {
            "name": "Ron Appleton",
            "email": "ron.appleton@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.2",
        "ronappleton/laravel-typed-config": "^1.0",
        "laravel/vonage-notification-channel": "^3.3",
        "guzzlehttp/guzzle": "^7.8"
    },
    "require-dev": {
        "larastan/larastan": "^2.9",
        "laravel/pint": "^1.15",
        "orchestra/testbench": "^9.0",
        "spatie/test-time": "^1.3",
        "spatie/laravel-permission": "^6.7",
        "ronappleton/spatie-laravel-permission-mock": "@dev"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Appleton\\Threads\\ServiceProvider",
                "Appleton\\Threads\\RouteServiceProvider"
            ]
        }
    }
}
